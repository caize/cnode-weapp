@import "/bower_components/wxParse/wxParse/wxParse.wxss";
@import '/bower_components/zanui-weapp/dist/loadmore/index.wxss';

.container {
  padding: 24rpx 24rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.user {
  margin: 24rpx 0;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  float: left;
  border-radius: 50%;
  margin-right: 16rpx;
}

.user-info {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  line-height: 48rpx;
}

.name {
  font-size: 32rpx;
}

.create-at {
  font-size: 24rpx;
  color: #555;
}

.markdown-text {
  margin: 20rpx 0 12rpx;
}

/*Fix font size too large*/
.wxParse-div {
  font-size: 32rpx;
}

/*Fix code*/
.wxParse-pre {
  padding: 16rpx;
  overflow: auto;
  font-size: 85%;
  line-height: 1.45;
  background-color: #f7f7f7;
  border-radius: 6rpx;
  margin: 20rpx 0;
}

/*Fix scroll*/
.wxParse-li-text {
  line-height: 48rpx;
}

.reply {
  padding: 16rpx 0;
  border-top: 2rpx solid #eee;
}

.reply-title {
  background: #eee;
  padding: 12rpx;
  font-size: 32rpx;
}

.reply-avatar {
  width: 96rpx;
  height: 96rpx;
  float: left;
  border-radius: 50%;
  margin-right: 16rpx;
}

.reply-user-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.reply-name {
  font-size: 32rpx;
}

.reply-time {
  color: #555;
  font-size: 24rpx;
}
