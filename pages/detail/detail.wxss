@import "/bower_components/wxParse/wxParse/wxParse.wxss";

.container {
  padding: 12px 12px 0;
  font-weight: 300;
}

.title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 12px;
}

.user {
  margin: 12px 0;
  position: relative;
}

.avatar {
  width: 48px;
  height: 48px;
  float: left;
  border-radius: 50%;
  margin-right: 8px;
}

.user-info {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  line-height: 24px;
}

.name {
  font-weight: 400;
  font-size: 16px;
}

.create-at {
  font-size: 12px;
  color: #555;
}

.operate-0 {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
}

.operate-0 > view {
  padding: 4px;
}

.star {
