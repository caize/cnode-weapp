.container {
  padding: 24rpx 24rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.user {
  margin: 24rpx 0;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  float: left;
  border-radius: 50%;
  margin-right: 16rpx;
}

.user-info {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  line-height: 48rpx;
}

.name {
  font-size: 32rpx;
}

.create-at {
  font-size: 24rpx;
  color: #555;
}

.reply {
  padding: 16rpx 0;
  border-top: 2rpx solid #eee;
}

.reply-title {
  background: #eee;
  padding: 12rpx;
  font-size: 32rpx;
}

.reply-avatar {
  width: 96rpx;
  height: 96rpx;
  float: left;
  border-radius: 50%;
  margin-right: 16rpx;
}

.reply-user-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.reply-name {
  font-size: 32rpx;
}

.reply-time {
  color: #555;
  font-size: 24rpx;
}
