.topic-list {
  display: flex;
  width: 100%;
  height: 200px;
}

.topic-container {
  padding: 24rpx;
  display: flex;
  border-bottom: 1px solid #eee;
}

.topic-avatar {
  display: flex;
  flex-basis: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.topic-content {
  display: flex;
  flex-direction: column;
}

.topic-title {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.topic-sub-content {
  display: flex;
}
