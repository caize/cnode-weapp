.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.link {
  padding: 24rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #eee;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  float: left;
}

.content {
  height: 96rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title {
  /*width: 500rpx;*/
  font-size: 32rpx;
  line-height: 48rpx;
  color: #333;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.sub-content {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.tag {
  background-color: #e5e5e5;
  color: #999;
  padding: 0 8rpx;
  border-radius: 4rpx;
  line-height: 40rpx;
  margin-right: 16rpx;
}

.tag-highlight {
  background: #80bd01;
  color: #fff;
}

.sub-sub-content {
  color: #b4b4b4;
}

.reply {
  color: #9e78c0;
}

.time {
  flex-grow: 1;
  text-align: right;
  color: #778087;
}
