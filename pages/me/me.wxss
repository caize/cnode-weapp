.button-container {
  height: 100%;
  display: flex;
  align-items: center;
  position: fixed;
  width: 100%;
}

.button-container button {
  padding-left: 80px;
  padding-right: 80px;
}

page {
  background: #f9f9f9;
}

.user {
  padding: 12px;
  background: #fff;
  border-bottom: 1px solid #eee;
  margin-bottom: 20px;
}

.avatar {
  float: left;
  width: 56px;
  height: 56px;
  border-radius: 50%;
  margin-right: 10px;
}

.info {
  font-size: 18px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.name {
  line-height: 32px;
}

.more {
  line-height: 24px;
  color: #555;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
}

.exit {
  text-align: center;
}

.exit-active {
  background: #eee;
}
