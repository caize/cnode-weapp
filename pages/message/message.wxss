.button-container {
  height: 100%;
  display: flex;
  align-items: center;
  position: fixed;
  width: 100%;
}

.container {
  color: #333;
  font-size: 30rpx;
}

.link {
  border-bottom: 1rpx solid #eee;
  padding: 30rpx;
}

.author {
  color: #08c;
}

.title {
  width: 700rpx;
  font-size: 32rpx;
  color: #08c;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-top: 20rpx;
}
